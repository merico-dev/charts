{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "ESNext"
  }
}
